@using stokMVC.Models.Entity;
@model List<musteriler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th> Musteri Id</th>
        <th> Musteri Adı</th>
        <th> Musteri Soyadı</th>
    </tr>
    <tbody>
        @foreach (var mstri in Model)
        {
            <tr>
                <th>@mstri.musteriId</th>
                <td>@mstri.musteriAd</td>
                <td>@mstri.musteriSoyad</td>
                <td><a href="/musteri/Sil/@mstri.musteriId" class="btn btn-danger">SİL</a></td>
                <td><a href="/musteri/MusteriGetir/@mstri.musteriId" class="btn btn-success">GÜNCELLE</a></td>
            </tr>
        }
    </tbody>
</table>

<a href="/Musteri/YeniMusteri/" class="btn btn-primary">YENİ MÜŞTERİ EKLE</a>

