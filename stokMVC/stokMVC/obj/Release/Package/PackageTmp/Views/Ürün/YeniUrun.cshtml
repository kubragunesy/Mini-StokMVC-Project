@model stokMVC.Models.Entity.urunler
@{
    ViewBag.Title = "YeniUrun";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form class="form-group" method="post">
    <div style="margin-bottom:6px">
        <label>Ürün Adı</label>
        <input type="text" class="form-control" name="urunAd" />
    </div>
    <div>
        <label>Kategori Seçiniz</label>
        @Html.DropDownListFor(m=>m.kategoriler.kategoriId,(List<SelectListItem>)ViewBag.dgr, new {@class="form-control"})
    </div>
    <div>
        <label>Ürün Fiyatı</label>
        <input type="text" class="form-control" name="fiyat" />
    </div>
    <div>
        <label>Ürün Markası</label>
        <input type="text" class="form-control" name="marka" />
    </div>
    <div>
        <label>Ürün Stok</label>
        <input type="text" class="form-control" name="stok" />
    </div>

    <div style="margin-top:15px">
        <button class="btn btn-info">Ürün Ekle</button>
    </div>
</form>

